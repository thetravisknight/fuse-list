  "keywords": [
    "string",
    "separator",
    "text",
    "array"
  ],
  "author": "Travis Knight <travis@travisknight.net> (https://travisknight.net/)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "jest": "^27.5.1",
    "prettier": "^2.6.0",
    "ts-jest": "^27.1.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.2"
  },
  "files": [
    "lib/**/*"
  ]
}
